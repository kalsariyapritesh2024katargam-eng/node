<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Table</title>

    <style>
        body{
            font-family: Arial;
            padding: 20px;
            background: #f6f6f6;
        }
        table{
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0 0 10px #aaa;
        }
        th, td{
            padding: 12px;
            text-align: center;
            border: 1px solid #ccc;
        }
        th{
            background: #333;
            color: #fff;
        }
        button{
            padding: 6px 12px;
            border: none;
            color: #fff;
            background: royalblue;
            border-radius: 5px;
            cursor: pointer;
        }
        .delete-btn{
            background: crimson;
        }
        .top-btn{
            margin-bottom: 20px;
            padding: 10px 15px;
            background: green;
            border-radius: 6px;
            display: inline-block;
        }
    </style>

</head>
<body>

   <form action="/createData">
            <input type="hidden" name="id" value="<%=(editrecord ) ? editrecord._id :""%>">
            <input type="text" name="name"  value="<%=(editrecord ) ? editrecord.name :""%>" placeholder="Name"><br>
            <br>
            <input type="text" name="surname" value="<%=(editrecord ) ? editrecord.surname:""%>" placeholder="Surname"><br><br>
            <button type="submit">Submit</button><br><br>
        </form>

    <table>
        <tr>
            <th>Sr No</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Update/Delete</th>
          
        </tr>

        <% data.map((i,index)=>{ %>
        <tr>
            <td><%= index+1 %></td>
            <td><%= i.name %></td>
            <td><%= i.surname %></td>
            <td>
                <a href="/updatedata/<%= i._id %>"><button>Update</button></a>
                <a href="/deletedata/<%= i._id %>"><button class="delete-btn">Delete</button></a>
            </td>
        </tr>
        <% }) %>
    </table>

</body>
</html>
