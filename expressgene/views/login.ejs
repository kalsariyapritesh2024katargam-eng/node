<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Vanta Birds Login</title>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

  *{margin:0;padding:0;box-sizing:border-box;font-family:'Poppins',sans-serif;}

  body{
    height:100vh;
    display:flex;
    justify-content:center;
    align-items:center;
    overflow:hidden;
    background:#000; /* fallback if Vanta fails */
  }

  /* Vanta background container */
  #vanta-bg{
    position:absolute;
    top:0;left:0;
    width:100%;
    height:100%;
    z-index:0;
  }

  .card{
    width:420px;
    padding:40px;
    border-radius:20px;
    background:rgba(255,255,255,0.08);
    backdrop-filter:blur(15px);
    z-index:10;
    box-shadow:0 0 25px rgba(255,0,255,0.4);
    border:1px solid rgba(255,255,255,0.25);
    animation:fadeIn 1s ease-out;
  }

  @keyframes fadeIn{
    from{opacity:0;transform:translateY(40px);}
    to{opacity:1;transform:translateY(0);}
  }

  .card h2{
    text-align:center;
    color:#fff;
    font-size:32px;
    margin-bottom:25px;
    text-shadow:0 0 10px #ff00ff;
  }

  .card input{
    width:100%;
    padding:14px;
    margin:14px 0;
    background:rgba(255,255,255,0.12);
    border:none;
    border-radius:12px;
    color:#fff;
    font-size:17px;
    transition:.3s;
    outline:none;
  }
  .card input:focus{
    transform:scale(1.05);
    background:rgba(255,255,255,0.22);
    box-shadow:0 0 18px #ff00ff;
  }

  button{
    width:100%;
    padding:15px;
    border:none;
    border-radius:14px;
    background:linear-gradient(45deg,#ff00ff,#7a00ff);
    color:#fff;
    font-size:19px;
    cursor:pointer;
    transition:.3s;
    box-shadow:0 0 20px #ff00ff;
  }
  button:hover{
    transform:scale(1.08);
    box-shadow:0 0 28px #ff00ff;
  }

  .create{
    text-align:center;
    margin-top:15px;
    color:#fff;
  }
  .create a{
    color:#00eaff;
    text-decoration:none;
    font-weight:600;
  }
  .create a:hover{
    text-shadow:0 0 10px cyan;
  }
.error-box{
  margin-top:10px;
  padding:12px;
  background:rgba(255, 0, 0, 0.25);
  color:#ff4b4b;
  border:1px solid rgba(255,0,0,0.5);
  border-radius:10px;
  text-align:center;
  font-weight:600;
  box-shadow:0 0 12px rgba(255,0,0,0.5);
  transition:0.5s;
}


</style>
</head>

<body>

<!-- Vanta Bird Background -->
<div id="vanta-bg"></div>

<!-- Login Card -->
<div class="card">
  <h2>WELCOME BACK</h2>
  <% if(error){ %>
  <div class="error-box"><%= error %></div>
<% } %>



  <form action="/loginUser" method="post" autocomplete="off">
  <input type="text" name="username" placeholder="Enter Username" required autocomplete="new-username">
  <input type="password" name="password" placeholder="Enter Password" required autocomplete="new-password">
  <button type="submit">Login</button>
  </form>


  <div class="create">
    New User? <a href="/signUp">Create Account</a>
  </div>
</div>

<!-- Vanta + ThreeJS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>

<script>
VANTA.NET({
  el: "#vanta-bg",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  scale: 1.00,
  scaleMobile: 1.00
})
</script>
<script>
  // Auto hide error message after 4 seconds
  setTimeout(() => {
    const errorBox = document.querySelector(".error-box");
    if (errorBox) {
      errorBox.style.opacity = "0";
      errorBox.style.transition = "0.4s";

      // remove from layout completely
      setTimeout(() => {
        errorBox.style.display = "none";
      }, 800);
    }
  }, 4000); // 4 seconds
</script>


</body>
</html>
