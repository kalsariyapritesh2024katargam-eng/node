<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Dashboard</title>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }

  body {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #6e00ff, #bb00ff);
    overflow: hidden;
    color: white;
  }

  /* Floating Animated Circles */
  .circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255,255,255,0.12);
    animation: float 8s infinite ease-in-out;
  }

  .circle:nth-child(1){ width: 150px; height: 150px; top: 10%; left: 15%; }
  .circle:nth-child(2){ width: 240px; height: 240px; bottom: 8%; right: 15%; animation-delay: 2s; }
  .circle:nth-child(3){ width: 100px; height: 100px; bottom: 25%; left: 7%; animation-delay: 4s; }

  @keyframes float {
    0% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-30px) scale(1.1); }
    100% { transform: translateY(0) scale(1); }
  }

  /* Dashboard Card */
  .dashboard-box {
    width: 450px;
    padding: 35px;
    background: rgba(255,255,255,0.15);
    box-shadow: 0 0 30px rgba(255,255,255,0.3);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(50px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .dashboard-box h2 {
    text-align: center;
    margin-bottom: 25px;
    letter-spacing: 2px;
  }

  .info-box {
    margin: 12px 0;
    padding: 12px;
    background: rgba(255,255,255,0.25);
    border-radius: 10px;
    font-size: 18px;
    display: flex;
    justify-content: space-between;
  }

  /* Logout Button */
  .logout-btn {
    width: 100%;
    padding: 12px;
    margin-top: 25px;
    background: linear-gradient(45deg, #ff0055, #ff00b3);
    border: none;
    border-radius: 10px;
    color: white;
    font-size: 18px;
    cursor: pointer;
    transition: 0.4s;
  }

  .logout-btn:hover {
    transform: scale(1.08);
    box-shadow: 0 0 15px #ff4fff;
  }
    #vanta-bg{
    position:absolute;
    top:0;left:0;
    width:100%;
    height:100%;
    z-index:0;
  }

</style>
</head>

<body>
  <div id="vanta-bg"></div>

  <!-- Floating Background Bubbles -->
  <div class="circle"></div>
  <div class="circle"></div>
  <div class="circle"></div>

  <!-- DASHBOARD BOX -->
  <div class="dashboard-box">
    <h2>Welcome to Dashboard</h2>

    <!-- Showing Logged In Details -->
    <div class="info-box">
      <span>Username</span>
      <span><%= user.username %></span>
    </div>

    <div class="info-box">
      <span>Email</span>
      <span><%= user.email %></span>
    </div>

    <div class="info-box">
      <span>Password</span>
      <span>********</span>
    </div>

    <!-- Logout -->
    <form action="/logout">
      <button type="submit" class="logout-btn">Logout</button>
    </form>

  </div>

  <!-- Vanta + ThreeJS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>

<script>
VANTA.NET({
  el: "#vanta-bg",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  scale: 1.00,
  scaleMobile: 1.00
})
</script>

</body>
</html>
